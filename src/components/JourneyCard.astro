---
interface Props {
  act: string;
  title: string;
  dates: string;
  description: string;
  image?: string;
}

const { act, title, dates, description, image } = Astro.props;
---

<div class="relative overflow-hidden min-h-[200px] flex flex-col justify-end rounded-xl border-t-[3px] border-vermillion transition-transform duration-200 hover:-translate-y-1">
  {/* Background - either image or solid color */}
  {image ? (
    <img
      src={image}
      alt={title}
      class="absolute inset-0 w-full h-full object-cover"
    />
  ) : (
    <div class="absolute inset-0 bg-surface"></div>
  )}

  {/* Dark overlay for readability */}
  <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/60 to-black/30"></div>

  {/* Content */}
  <div class="relative z-10 p-5">
    <p class="text-[0.65rem] tracking-widest text-vermillion uppercase mb-2">
      {act}
    </p>
    <h3 class="font-display text-2xl font-normal mb-1">
      {title}
    </h3>
    <p class="text-sm text-gold mb-3">
      {dates}
    </p>
    <p class="text-sm text-gray-300">
      {description}
    </p>
  </div>
</div>

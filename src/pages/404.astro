    <style>
      /* Floating lanterns */
      .lantern {
        position: absolute;
        font-size: 2rem;
        animation: float-lantern 8s ease-in-out infinite;
      }
      .lantern-1 { top: 10%; left: 10%; animation-delay: 0s; }
      .lantern-2 { top: 20%; right: 15%; animation-delay: 2s; font-size: 2.5rem; }
      .lantern-3 { bottom: 30%; left: 8%; animation-delay: 4s; font-size: 1.5rem; }

      @keyframes float-lantern {
        0%, 100% { transform: translateY(0) rotate(-5deg); }
        50% { transform: translateY(-20px) rotate(5deg); }
      }

      /* Falling sakura petals */
      .sakura {
        position: absolute;
        font-size: 1.5rem;
        top: -20px;
        animation: fall-sakura linear infinite;
      }
      .sakura-1 { left: 15%; animation-duration: 10s; animation-delay: 0s; }
      .sakura-2 { left: 35%; animation-duration: 12s; animation-delay: 2s; font-size: 1rem; }
      .sakura-3 { left: 55%; animation-duration: 14s; animation-delay: 1s; }
      .sakura-4 { left: 75%; animation-duration: 11s; animation-delay: 3s; font-size: 1.2rem; }
      .sakura-5 { left: 90%; animation-duration: 13s; animation-delay: 5s; font-size: 0.8rem; }

      @keyframes fall-sakura {
        0% { 
          transform: translateY(-20px) rotate(0deg) translateX(0); 
          opacity: 1;
        }
        100% { 
          transform: translateY(110vh) rotate(720deg) translateX(50px); 
          opacity: 0.3;
        }
      }

      /* Subtle background pattern */
      body::before {
        content: '';
        position: fixed;
        inset: 0;
        background-image: 
          radial-gradient(circle at 20% 80%, rgba(196, 30, 58, 0.05) 0%, transparent 50%),
          radial-gradient(circle at 80% 20%, rgba(212, 175, 55, 0.03) 0%, transparent 50%);
        pointer-events: none;
      }

      /* Return Button Styles */
      .return-btn {
        background: linear-gradient(135deg, #C41E3A 0%, #8B0000 100%);
        border-radius: 9999px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        text-decoration: none;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
      }

      .return-btn:hover {
        transform: translateY(-4px);
        box-shadow: 0 0 30px rgba(196, 30, 58, 0.6);
        filter: brightness(1.1);
      }
      
      .return-btn:hover span:first-child {
        transform: scale(1.1);
      }
      
      /* Reset specific to this button to ensure no overrides */
      a.return-btn {
        display: inline-flex;
        border: none;
        outline: none;
      }
    </style>
